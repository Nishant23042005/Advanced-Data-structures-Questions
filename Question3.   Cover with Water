import java.util.*;

public class FilipCellsTwoCounters {
    public static void main(String[] args) {
        Scanner sc = new Scanner(System.in);

        int t = sc.nextInt();
        while (t > 0) {
            int n = sc.nextInt();
            String s = sc.next();

            int current = 0; 
            int maxRun = 0;  

            for (int i = 0; i < n; i++) {
                if (s.charAt(i) == '.') {
                    current++;
                } else {
                    maxRun = Math.max(maxRun, current);
                    current = 0; 
                }
            }
            maxRun = Math.max(maxRun, current);

            int answer = Math.min(2, maxRun);
            System.out.println(answer);
        }
       
    }
}
